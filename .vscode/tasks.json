{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint-python",
      "type": "shell",
      "command": "pylint",
      "args": ["--disable=all", "--enable=F,E,W,C,R", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Optimize Imports and Format",
      "type": "shell",
      "command": "autoflake --remove-all-unused-imports --in-place ${file} && isort ${file} && black ${file}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
